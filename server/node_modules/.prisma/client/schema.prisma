  reason         String? // Причина корректировки
  status         String    @default("draft") // draft | posted | voided
  isLocked       Boolean   @default(false)
  createdBy      Int // FK → User
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  voidedAt       DateTime?
  voidedBy       Int?
  voidReason     String?

  product Product @relation(fields: [productId], references: [id])
  creator User    @relation("AdjustmentCreator", fields: [createdBy], references: [id])
  voider  User?   @relation("AdjustmentVoider", fields: [voidedBy], references: [id])

  @@index([productId])
  @@index([adjustmentDate])
  @@index([effectiveDate])
  @@index([status])
}

